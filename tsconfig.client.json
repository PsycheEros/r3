{
	"compilerOptions": {
		"target": "es2015",
		"rootDir": "ts",
		"outDir": "client/js",
		"module": "commonjs",
		"lib": [ "dom", "es2017" ],
		"allowSyntheticDefaultImports": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"strictNullChecks": false
	},
	"files": [
		"ts/{client,shared}/**/*.ts"
	]
}
