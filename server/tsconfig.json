{
	"extends": "../tsconfig.json",
	"compilerOptions": {
		"target": "es2015",
		"outDir": "js",
		"module": "commonjs",
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": false,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"strictNullChecks": true,
		"lib": [ "es2017" ],
		"rootDirs": [ "ts", "../ts" ],
		"types": [ "express", "node", "redis", "socket.io", "serve-static", "mathjs", "uuid" ],
		"noEmitHelpers": true,
		"importHelpers": true,
		"alwaysStrict": false,
		"noImplicitUseStrict": true
	},
	"include": [
		"ts/**/*.ts",
		"../ts/**/*.ts"
	]
}
