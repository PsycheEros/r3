{
	"compilerOptions": {
		"target": "es2015",
		"outDir": "js",
		"module": "system",
		"moduleResolution": "node",
		"lib": [ "dom", "es2017" ],
		"rootDirs": [ "ts", "../ts" ],
		"types": [ "systemjs", "mathjs" ],
		"allowSyntheticDefaultImports": false,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"strictNullChecks": false
	},
	"include": [
		"ts/**/*",
		"../ts/**/*"
	]
}
